<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chinalwb.are.AREditText
        android:id="@+id/richEditText"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/toolBarRelativeLayout"
        android:layout_marginTop="10dp"
        android:gravity="top|left"
        android:hint="Your EditText goes here"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/toolBarRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2D3947"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.chinalwb.are.styles.toolbar.ARE_ToolbarDefault
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <com.chinalwb.are.styles.toolbar.ARE_ToolbarDefault
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

    <com.chinalwb.are.AREditText
        android:id="@+id/richEditText2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/richEditText"
        android:layout_marginTop="10dp"
        android:gravity="top|left"
        android:hint="Your EditText goes here"
        android:textSize="16sp"
        android:visibility="gone"/>



    <ImageView
        android:id="@+id/customBoldButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/customImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/image"
        android:layout_toEndOf="@id/customBoldButton"
        android:layout_toRightOf="@id/customBoldButton"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/getHtmlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getHtml"
        android:layout_toEndOf="@id/customBoldButton"
        android:layout_toRightOf="@id/customImageButton"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>